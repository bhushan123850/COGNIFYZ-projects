# TEMPERATURE CONVERSION

def celsius_to_fahrenheit(celsius):
    return (celsius * 9/5) + 32

def fahrenheit_to_celsius(fahrenheit):
    return (fahrenheit - 32) * 5/9

# Prompt the user for temperature and unit
temperature = float(input("Enter the temperature value: "))
unit = input("Enter the unit of measurement (C for Celsius or F for Fahrenheit): ").upper()

if unit == 'C':
    converted_temp = celsius_to_fahrenheit(temperature)
    print(f"{temperature}째C is equal to {converted_temp:.2f}째F.")
elif unit == 'F':
    converted_temp = fahrenheit_to_celsius(temperature)
    print(f"{temperature}째F is equal to {converted_temp:.2f}째C.")
else:
    print("Invalid unit. Please enter 'C' for Celsius or 'F' for Fahrenheit.")
